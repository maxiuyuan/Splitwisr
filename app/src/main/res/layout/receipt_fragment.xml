<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <EditText
        android:id="@+id/ItemCost"
        android:layout_width="404dp"
        android:layout_height="52dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="468dp"
        android:ems="10"
        android:hint="enter item cost"
        android:inputType="numberSigned"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SubmitReceiptButton"
        android:layout_width="402dp"
        android:layout_height="50dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="681dp"
        android:text="submit receipt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/UserDropDown"
        android:layout_width="404dp"
        android:layout_height="46dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="422dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AddUserToItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="632dp"
        android:text="add user to item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AddItemButton"
        android:layout_width="224dp"
        android:layout_height="49dp"
        android:layout_marginStart="185dp"
        android:layout_marginTop="632dp"
        android:text="Add item to receipt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/UsersSplittingItem"
        android:layout_width="398dp"
        android:layout_height="104dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="526dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ReceiptContents"
        android:layout_width="404dp"
        android:layout_height="414dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>